;; Left Bar
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defwidget left-bar []
  (box  :class "transparent"
        :space-evenly true
        :spacing 12
        :orientation "h"
    (osk-toggle-off)
    (tablet-toggle-off)
    (heart-toggle-off)
  )
)
(defwindow left-bar
  :monitor 0
  :stacking "overlay"
