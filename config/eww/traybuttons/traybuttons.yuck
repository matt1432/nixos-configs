;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; On-Screen Keyboard Toggle
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defvar osk-ts false)
(defwidget osk-toggle-on []
  (eventbox :class "toggle-on"
            :onclick "$HYPR_PATH/osk-toggle.sh toggle &"
            :cursor "pointer"
    
    (box  :class "osk-toggle"
          :orientation "h"
      (label :text " 󰌌 ")
    )
  )
)
(defwidget osk-toggle-off []
  (eventbox :class "toggle-off"
            :onclick "$HYPR_PATH/osk-toggle.sh toggle &"
            :cursor "pointer"
    
    (box  :class "osk-toggle"
          :orientation "h"
      (label :text " 󰌌 ")
    )
  )
)
(defwindow osk
  :monitor 0
  :stacking "overlay"
  :exclusive "ignore"
  :geometry (geometry :x "5px"
                      :y "10px"
                      :width "0px"
                      :height "0px"
                      :anchor "top left"
            )
  (revealer
      :transition "crossfade"
      :reveal osk-ts
      :duration "550ms"
    (osk-toggle-on)
  )
)

